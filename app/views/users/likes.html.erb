<ul class="list-unstyled">
  <% @user.likes.each do |like| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(@user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <%= link_to like.user.name, user_path(like.user) %>
        <div>
        <p class="mb-0"><%= like.content %></p>
        </div>
        <div>
          <% if current_user == @user %>
            <%= link_to "お気に入り解除", like, method: :delete, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate @likes %>
</ul>